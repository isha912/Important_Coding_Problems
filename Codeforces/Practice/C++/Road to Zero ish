#include<bits/stdc++.h>
#define ll long long int
using namespace std;
int main()
{
    int t;
    ll x,y,a,b;
    cin>>t;
    while(t--){
        cin>>x>>y;
        cin>>a;
        cin>>b;


        if(x > y){
            swap(x,y);
        }
        ll dol = 0, lar = 0;
        dol = x*a + y*a;
        ll z = y - x;
        lar = z*a + x * b;

        cout<<min(dol,lar)<<endl;

    }

    return 0;
}
